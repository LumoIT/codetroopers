<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_blue_dark"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/button_sell"/>

    <ImageView
        android:id="@+id/imageArmor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_slideshow"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/armorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintLeft_toRightOf="@+id/imageArmor"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:srcCompat="@drawable/damage"
        app:layout_constraintLeft_toRightOf="@+id/imageArmor"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/armorName"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/armorName"
        app:srcCompat="@drawable/range"
        app:layout_constraintLeft_toRightOf="@+id/txtDamage"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/txtDamage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/armorName"/>

    <TextView
        android:id="@+id/txtRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="250 m"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/armorName"
        app:layout_constraintLeft_toRightOf="@+id/imageView4"
        android:layout_marginLeft="4dp"/>

    <Button
        android:id="@+id/button_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_green_dark"
        android:elevation="0dp"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/button_buy"/>

    <ImageView
        android:id="@+id/img_price"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/txt_cooldown"
        app:layout_constraintTop_toTopOf="@+id/txtRange"
        app:srcCompat="@drawable/gold"/>

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="0dp"
        android:text="TextView"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/img_price"
        app:layout_constraintTop_toTopOf="@+id/txtRange"/>

    <TextView
        android:id="@+id/txt_cooldown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="0dp"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/txtRange"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:srcCompat="@drawable/cooldown"
        app:layout_constraintTop_toTopOf="@+id/txtRange"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/txtRange"
        android:layout_marginLeft="8dp"/>
</android.support.constraint.ConstraintLayout>